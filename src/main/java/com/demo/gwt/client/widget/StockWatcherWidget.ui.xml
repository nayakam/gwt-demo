<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui">
    <ui:style>
        .watchList {
            border: 1px solid silver;
            padding: 2px;
            margin-bottom:6px;
        }

    </ui:style>
    <g:VerticalPanel >
        <g:FlexTable ui:field="stocksFlexTable" styleName="{style.watchList}" />
        <g:HorizontalPanel>
            <g:TextBox ui:field="newSymbolTextBox" />
            <g:Button ui:field="addStockButton" text="Add"/>
            <g:Button ui:field="addFromServerButton" text="Add from server" />
        </g:HorizontalPanel>
        <g:Label ui:field="lastUpdatedLabel" />
    </g:VerticalPanel>

</ui:UiBinder>